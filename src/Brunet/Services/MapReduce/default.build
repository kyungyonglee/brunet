<?xml version="1.0"?>

<project name="Brunet" default="build">
  <description> Builds Brunet.Services.MapReduce.dll </description>
  <property name="build.dir" value="build"/>
  <property name="lib.dir" value="../../../../lib"/>

  <target name="test" description="Configures a debug build">
    <copy todir="${build.dir}">
       <fileset basedir="${lib.dir}">
          <include name="Brunet.dll" />
       </fileset>
    </copy>
    <csc target="library" define="BRUNET_NUNIT" output="${build.dir}/Brunet.Services.MapReduce.Test.dll">
      <sources failonempty="true">
        <include name="*.cs"/>
      </sources>
      <references>
        <include name="${build.dir}/Brunet.dll" />
        <include name="${lib.dir}/CondorSoap.dll" />
        <include name="${lib.dir}/classad.dll" />
        <include name="nunit.framework.dll" />
      </references>
    </csc>
    <nunit2>
      <formatter type="Plain" />
      <test assemblyname="${build.dir}/Brunet.Services.MapReduce.Test.dll"/>
    </nunit2>
  </target>

  <target name="build" description="Builds Brunet.Services.MapReduce.dll for release">
    <copy todir="${build.dir}">
       <fileset basedir="${lib.dir}">
          <include name="Brunet.dll" />
          <include name="CondorSoap.dll" />
          <include name="classad.dll" />
       </fileset>
    </copy>
    <csc target="library" define="" output="${build.dir}/Brunet.Services.MapReduce.dll">
      <sources failonempty="true">
        <include name="*.cs"/>
      </sources>
      <references basedir="${build.dir}">
        <include name="Brunet.dll" />
        <include name="CondorSoap.dll" />
        <include name="classad.dll" />
      </references>
    </csc>
    <copy todir="${lib.dir}">
      <fileset basedir="${build.dir}">
           <include name="Brunet.Services.MapReduce.dll" />
      </fileset>
    </copy>
  </target>
</project>
